---
import Footer from "../components/Footer.astro";
import "../styles/base.css";
import "../styles/header.css";
import "../styles/footer.css";

const { title = "Jaya Keshava Chandra Kotha" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>

<body>
  <div class="page">
    <div class="page-content">
      <header>
        <div class="site-identity">
          <a href="/" class="site-name">Jaya Keshava Chandra Kotha</a>
          <div class="site-tagline">
            PhD Candidate · Computer Engineering · UC Irvine
          </div>
        </div>

        <nav>
          <a href="/" data-path="/">Home</a>
          <a href="/work" data-path="/work">Work</a>
          <a href="/notes" data-path="/notes">Notes</a>
          <a href="/teaching" data-path="/teaching">Teaching</a>
          <a href="/about" data-path="/about">About</a>
        </nav>
      </header>

      <hr />

      <slot />
    </div>

    <Footer />
  </div>

  <script>
    const path = window.location.pathname;

    document.querySelectorAll("nav a[data-path]").forEach(link => {
      const target = link.dataset.path;

      if (
        path === target ||
        (target === "/work" && path.startsWith("/work"))
      ) {
        link.classList.add("active");
      }
    });
  </script>
</body>
</html>
