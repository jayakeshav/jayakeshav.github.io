---
const { title = "Jaya Keshava Chandra Kotha" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <style is:global>
    :root {
      --text-main: #1f2937;
      --text-muted: #4b5563;
      --accent: #2563eb;
      --bg-soft: #f9fafb;
      --border-soft: #e5e7eb;
    }

    /* ---------- Global ---------- */

    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Ubuntu, Cantarell, sans-serif;
      background: var(--bg-soft);
      color: var(--text-main);
      max-width: 820px;
      margin: 48px auto;
      padding: 0 24px;
      line-height: 1.65;
      font-size: 15.5px;
    }

    a {
      color: var(--accent);
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    p {
      color: var(--text-muted);
      max-width: 65ch;
    }

    /* ---------- Headings ---------- */

    h1 {
      font-size: 1.7rem;
      margin: 0 0 0.6rem 0;
    }

    h2 {
      font-size: 1.25rem;
      margin: 2rem 0 0.6rem 0;
    }

    /* ---------- Header ---------- */

    header {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .site-identity {
      display: flex;
      flex-direction: column;
    }

    .site-name {
      font-size: 1.75rem;
      font-weight: 600;
      color: var(--text-main);
    }

    .site-name:hover {
      text-decoration: none;
    }

    .site-tagline {
      font-size: 0.8rem;
      color: var(--text-muted);
    }

    nav {
      display: flex;
      gap: 18px;
      font-size: 0.9rem;
    }

    nav a {
      color: var(--text-muted);
    }

    nav a:hover {
      color: var(--text-main);
    }

    hr {
      border: none;
      border-top: 1px solid var(--border-soft);
      margin: 16px 0 24px 0;
    }

    /* ---------- Lists ---------- */

    ul {
      padding-left: 1.2rem;
    }

    li {
      margin-bottom: 0.8rem;
    }

    /* ---------- Projects ---------- */

    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 18px;
      margin-top: 24px;
    }

    .project-card {
      border: 1px solid var(--border-soft);
      border-radius: 10px;
      padding: 14px 16px;
      background: white;
      transition: border-color 0.15s ease,
                  transform 0.15s ease,
                  box-shadow 0.15s ease;
    }

    .project-card:hover {
      border-color: var(--accent);
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.04);
    }

    .project-title {
      font-size: 0.95rem;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .project-title a {
      color: var(--text-main);
    }

    .project-description {
      font-size: 0.85rem;
      line-height: 1.5;
      color: var(--text-muted);
      margin-bottom: 10px;
    }

    .project-meta {
      display: flex;
      gap: 12px;
      font-size: 0.75rem;
      color: var(--text-muted);
    }

      nav a[data-path] {
    position: relative;
  }

  nav a[data-path].active {
    color: var(--text-main);
    font-weight: 500;
  }

  nav a[data-path].active::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 100%;
    height: 2px;
    background: var(--accent);
    border-radius: 2px;
  }

  </style>

<script>
  const path = window.location.pathname;
  document.querySelectorAll("nav a[data-path]").forEach(link => {
    if (link.dataset.path === path) {
      link.classList.add("active");
    }
  });
</script>

</head>

<body>
  <header>
    <div class="site-identity">
      <a href="/" class="site-name">Jaya Keshava Chandra Kotha</a>
      <div class="site-tagline">
        PhD Candidate · Computer Engineering · UC Irvine
      </div>
    </div>

    <nav>
      <a href="/" data-path="/">Home</a>
      <a href="/about" data-path="/about">About</a>
      <a href="/research" data-path="/research">Research</a>
      <a href="/projects" data-path="/projects">Projects</a>
      <a href="/teaching" data-path="/teaching">Teaching</a>
    </nav>

  </header>

  <hr />

  <slot />
</body>
</html>
