---
import Footer from "../components/Footer.astro";
import "../styles/base.css";
import "../styles/header.css";
import "../styles/footer.css";

const { title = "Jaya Keshava Chandra Kotha" } = Astro.props;

const personSchema = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Jaya Keshava Chandra Kotha",
  "url": "https://jayakeshav.github.io",
  "jobTitle": "PhD Candidate",
  "affiliation": {
    "@type": "Organization",
    "name": "University of California, Irvine"
  },
  "sameAs": [
    "https://scholar.google.com/citations?user=57O1ClYAAAAJ&hl=en",
    "https://orcid.org/0009-0004-0865-9990",
    "https://github.com/jayakeshav",
    "https://www.linkedin.com/in/jayakeshavachandrakotha/"
  ]
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>{title}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- JSON-LD structured data -->
  <script
    type="application/ld+json"
    set:html={JSON.stringify(personSchema)}
  ></script>

</head>

<body>
  <div class="page">
    <div class="page-content">
      <header>
        <div class="site-identity">
          <a href="/" class="site-name">
            Jaya Keshava Chandra Kotha
          </a>
          <div class="site-tagline">
            PhD Candidate · Computer Engineering · UC Irvine
          </div>
        </div>

        <nav>
          <a href="/" data-path="/">Home</a>
          <a href="/work" data-path="/work">Work</a>
          <a href="/teaching" data-path="/teaching">Teaching</a>
          <a href="/notes" data-path="/notes">Blog</a>
          <a href="/about" data-path="/about">About</a>
        </nav>
      </header>

      <hr />

      <slot />
    </div>

    <Footer />
  </div>

  <!-- Active navigation script -->
  <script>
    const normalize = (p) => {
      if (!p) return "/";
      return p.endsWith("/") && p !== "/" ? p.slice(0, -1) : p;
    };

    const currentPath = normalize(window.location.pathname);

    document.querySelectorAll("nav a[data-path]").forEach(link => {
      const target = normalize(link.dataset.path);

      // Exact match
      if (currentPath === target) {
        link.classList.add("active");
        return;
      }

      // Section match (e.g. /work/*)
      if (target === "/work" && currentPath.startsWith("/work/")) {
        link.classList.add("active");
      }
    });
  </script>
</body>
</html>
